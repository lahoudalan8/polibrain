<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".HallActivity"
    tools:showIn="@layout/app_bar_hall">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- MATEMÁTICA -->
            <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/mat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                tools:context=".HallActivity">

                <com.educa.alan.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/mat1"
                    android:layout_width="196dp"
                    android:layout_height="196dp"
                    android:clickable="true"
                    android:cropToPadding="false"
                    android:onClick="clicaMat1"
                    android:src="@drawable/matbas"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="5dp"
                    tools:ignore="OnClick" />

                <com.educa.alan.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/mat2"
                    android:layout_width="196dp"
                    android:layout_height="196dp"
                    android:clickable="true"
                    android:onClick="clicaMat2"
                    android:src="@drawable/fracoes"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="5dp"
                    tools:ignore="OnClick" />

                <com.educa.alan.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/mat3"
                    android:layout_width="196dp"
                    android:layout_height="196dp"
                    android:clickable="true"
                    android:onClick="clicaMat3"
                    android:src="@drawable/teste1"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="5dp"
                    tools:ignore="OnClick" />

            </LinearLayout>

            <!-- FÍSICA -->
            <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/fis"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="gone"
                tools:context=".HallActivity">

                <com.educa.alan.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/fis1"
                    android:layout_width="106dp"
                    android:layout_height="106dp"
                    android:src="@drawable/teste1"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="2dp" />

                <com.educa.alan.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/fis2"
                    android:layout_width="106dp"
                    android:layout_height="106dp"
                    android:src="@drawable/teste1"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="2dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>



</android.support.constraint.ConstraintLayout>